{
  "name": "clairvue",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "concurrently \"vite dev\" \"bun run src/scheduler/index.ts\"",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "generate-migrations": "bunx drizzle-kit generate:pg --schema ./src/lib/data/schema/index.ts",
    "run-migrations": "bun run ./src/lib/data/migrate.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.28.1",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/bun": "^1.0.5",
    "@types/eslint": "8.56.0",
    "@types/he": "^1.2.3",
    "@types/jsdom": "^21.1.6",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "postcss": "^8.4.32",
    "postcss-load-config": "^5.0.2",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.3.6",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.3",
    "vitest": "^1.2.0"
  },
  "type": "module",
  "dependencies": {
    "@lucia-auth/adapter-drizzle": "^1.0.2",
    "@mozilla/readability": "^0.5.0",
    "axios": "^1.6.7",
    "bits-ui": "^0.18.4",
    "clsx": "^2.1.0",
    "cron": "^3.1.6",
    "drizzle-orm": "^0.29.3",
    "he": "^1.2.0",
    "isomorphic-dompurify": "^2.4.0",
    "jsdom": "^24.0.0",
    "link-preview-js": "^3.0.5",
    "lucia": "^3.0.1",
    "lucide-svelte": "^0.330.0",
    "mode-watcher": "^0.2.1",
    "oslo": "^1.1.3",
    "postgres": "^3.4.3",
    "rss-parser": "^3.13.0",
    "short-unique-id": "^5.0.3",
    "tailwind-merge": "^2.2.1",
    "tailwind-variants": "^0.2.0",
    "zod": "^3.22.4"
  }
