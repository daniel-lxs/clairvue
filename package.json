{
  "name": "clairvue",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "dotenv -e .env.local vite dev",
    "build": "NODE_ENV=build vite build",
    "preview": "vite preview",
    "start": "node -r dotenv/config build",
    "watch": "vite dev",
    "test": "pnpm run test:integration && pnpm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "generate-migrations": "pnpm dlx drizzle-kit generate:pg --schema ./src/lib/server/data/schema/index.ts",
    "run-migrations": "pnpm dlx tsx ./src/lib/server/data/migrate.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@sveltejs/enhanced-img": "^0.1.9",
    "@sveltejs/kit": "^2.8.1",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@types/eslint": "8.56.0",
    "@types/jsdom": "^21.1.7",
    "@types/throttle-debounce": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^7.4.2",
    "drizzle-kit": "^0.20.18",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.46.0",
    "pg": "^8.13.1",
    "postcss": "^8.4.49",
    "postcss-load-config": "^5.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.8",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "svelte": "^4.2.19",
    "svelte-check": "^3.8.6",
    "tailwindcss": "^3.4.15",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vitest": "^1.6.0"
  },
  "type": "module",
  "dependencies": {
    "@lucia-auth/adapter-drizzle": "^1.1.0",
    "@mozilla/readability": "^0.5.0",
    "@sveltejs/adapter-node": "^5.2.9",
    "bits-ui": "^0.20.1",
    "bullmq": "^5.26.1",
    "clsx": "^2.1.1",
    "cron": "^3.2.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.29.5",
    "isomorphic-dompurify": "^2.16.0",
    "jsdom": "^24.1.3",
    "lucia": "^3.2.2",
    "lucide-svelte": "^0.330.0",
    "mode-watcher": "^0.3.1",
    "oslo": "^1.2.1",
    "postgres": "https://github.com/porsager/postgres/archive/2b85ea7fb8b50f7c69232bd8074aa11c8cbe9d3a.tar.gz",
    "rss-parser": "^3.13.0",
    "short-unique-id": "^5.2.0",
    "svelte-sonner": "^0.3.28",
    "tailwind-merge": "^2.5.4",
    "tailwind-variants": "^0.2.1",
    "throttle-debounce": "^5.0.2",
    "url-metadata": "^3.5.6",
    "zod": "^3.23.8"
  }
}
