{
  "name": "clairvue",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "start": "concurrently --kill-others \"bun run start:app\" \"bun run start:worker\"",
    "start:app": "node -r dotenv/config build",
    "start:worker": "bun run src/index-worker.ts",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "generate-migrations": "bunx drizzle-kit generate:pg --schema ./src/lib/server/data/schema/index.ts",
    "run-migrations": "bun run ./src/lib/server/data/migrate.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.28.1",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-node": "^5.0.1",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/bun": "^1.0.5",
    "@types/eslint": "8.56.0",
    "@types/he": "^1.2.3",
    "@types/jsdom": "^21.1.6",
    "@types/throttle-debounce": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "pg": "^8.11.3",
    "postcss": "^8.4.32",
    "postcss-load-config": "^5.0.2",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.3.6",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.3",
    "vitest": "^1.2.0"
  },
  "type": "module",
  "dependencies": {
    "@control.systems/logger": "^1.0.2",
    "@lucia-auth/adapter-drizzle": "^1.0.2",
    "@mozilla/readability": "^0.5.0",
    "axios": "^1.6.7",
    "bits-ui": "^0.20.0",
    "bullmq": "^5.4.6",
    "clsx": "^2.1.0",
    "cron": "^3.1.6",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.29.3",
    "he": "^1.2.0",
    "isomorphic-dompurify": "^2.4.0",
    "jsdom": "^24.0.0",
    "lucia": "^3.0.1",
    "lucide-svelte": "^0.330.0",
    "mode-watcher": "^0.3.0",
    "oslo": "^1.1.3",
    "postgres": "https://github.com/porsager/postgres/archive/2b85ea7fb8b50f7c69232bd8074aa11c8cbe9d3a.tar.gz",
    "rss-parser": "^3.13.0",
    "short-unique-id": "^5.0.3",
    "svelte-sonner": "^0.3.19",
    "tailwind-merge": "^2.2.1",
    "tailwind-variants": "^0.2.0",
    "throttle-debounce": "^5.0.0",
    "url-metadata": "^3.5.6",
    "zod": "^3.22.4"
  }
}
